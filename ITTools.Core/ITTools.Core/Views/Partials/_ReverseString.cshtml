@model ITTools.Core.Models.Tool

@{
    bool hasPlugin = ViewBag.HasPlugin;
}

<div class="tool-details-card reverse-string-card">
    <div class="reverse-header">
        <h2 class="reverse-title">@Model.Name</h2>
        <span class="reverse-icon">🔄</span>
    </div>
    <dl class="reverse-details">
        <div class="detail-item">
            <span class="detail-label">Name:</span>
            <span class="detail-value">@Model.Name</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Description:</span>
            <span class="detail-value">@Model.Description</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Category:</span>
            <span class="detail-value">@Model.Category?.Name</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Status:</span>
            <span class="detail-value">
                @if (Model.IsEnabled)
                {
                    <span class="badge badge-enabled">Enabled</span>
                }
                else
                {
                    <span class="badge badge-disabled">Disabled</span>
                }
            </span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Type:</span>
            <span class="detail-value">
                @if (hasPlugin)
                {
                    <span class="badge badge-executable">Executable</span>
                }
                else
                {
                    <span class="badge badge-info">Information Only</span>
                }
            </span>
        </div>
    </dl>

    @if (hasPlugin)
    {
        <div class="reverse-try-it-out mt-4">
            <h4>Try It Out</h4>
            <div class="input-group mb-3">
                <input type="text" class="form-control reverse-input" id="toolInput" placeholder="Enter text to reverse">
                <button class="btn btn-primary reverse-execute-btn" type="button" id="executeButton">Reverse</button>
            </div>
            <div class="result-section mt-2">
                <h5>Reversed Text:</h5>
                <div class="reverse-result-wrapper">
                    <pre id="resultOutput" class="reverse-result"></pre>
                </div>
            </div>
        </div>
    }
</div>