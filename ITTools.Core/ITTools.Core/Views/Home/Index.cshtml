@model IEnumerable<ITTools.Core.Models.ITool>
@{
    ViewData["Title"] = "ITTools";
}

<!DOCTYPE html>
<html>
<head>
    <title>ITTools</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-4">
        <h1 class="text-center">ITTools</h1>
        <div class="row">
            @foreach (var tool in Model)
            {
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@tool.Name</h5>
                            <p class="card-text">@tool.Description</p>
                            <form class="tool-form" data-tool="@tool.Name">
                                <div class="mb-3">
                                    <input type="text" class="form-control" name="input" placeholder="Enter input" />
                                </div>
                                <button type="submit" class="btn btn-primary">Execute</button>
                                <div class="mt-2">
                                    <strong>Output:</strong> <span class="output-text"></span>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <script>
        document.querySelectorAll('.tool-form').forEach(form => {
            form.addEventListener('submit', async (e) => {
                e.preventDefault();
                const toolName = form.getAttribute('data-tool');
                const input = form.querySelector('input[name="input"]').value;
                const output = form.querySelector('.output-text');

                const response = await fetch('/Home/Execute', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: `toolName=${encodeURIComponent(toolName)}&input=${encodeURIComponent(input)}`
                });
                const result = await response.json();

                if (result.success) {
                    output.textContent = result.result;
                } else {
                    output.textContent = result.message;
                }
            });
        });
    </script>
</body>
</html>